    <li><a href="/information">Information</a></li>
    <li><a href="/selvhjaelp">Selvhjælp</a></li>
  </ul>
</nav>

<style>
  @media only screen and (max-width: 391px) {
    .mobileVersionNav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: sticky;
  top: 0;
  background-color: var(--hvid);
  height: 60px;
  width: 100vw;
  z-index: 4;
  filter: drop-shadow(0 0 0.25rem var(--sort));
}

.navLinks {
  position: fixed;
  right: 0;
  width: 70vw;
  background: var(--hvid);
  max-height: 0;
  overflow: hidden;
  border-bottom-left-radius: 20px;
  top: 60px;
  transition: max-height 0.5s ease; 
}

.bookLink{
  text-decoration: underline;
  padding-left: 2rem;

}

.navMobileBtn {
  display: block;
  font-size: 2rem;
}

a{
  all: unset;
font-weight: 500;
font-size: 1.2rem;
color: var(--mørkBordeaux);
}

.navLinks>li>a{
  padding-left: 5rem;
}

#check {
  display: none;
}

#check:checked ~ .navLinks {
  max-height: 100vh;
  border-bottom: 3px solid var(--mørkBordeaux);
  border-left: 4px solid var(--mørkBordeaux);
}

#check:checked ~ .navLinks li {
  opacity: 1;
  display: block;
}

.active{
   color: var(--mørkBordeaux);
   font-weight: 600;
  }

  /* Gør burgermenu til knap */
  .container {
  position: relative;
  padding: 1.5rem;
}

.menu-toggle {
  position: absolute;
  right: 2rem;
  top: 49%;
  transform: translate(0, -50%);
  height: 26px;
  width: 29px;

  &, &:hover {
    color: #000;
  }
}

.menu-toggle-bar {
  display: block;
  position: absolute;
  top: 50%;
  margin-top: -1px;
  right: 0;
  width: 100%;
  height: 4px;
  border-radius: 4px;
  background-color: black;
  transition: all 0.3s ease;

  &.menu-toggle-bar--top {
    transform: translate(0, -8px);
  }
  &.menu-toggle-bar--middle {
  }
  &.menu-toggle-bar--bottom {
    transform: translate(0, 8px);
  }

  .nav-open & {
    &.menu-toggle-bar--top {
      transform: translate(0, 0) rotate(45deg);
    }
    &.menu-toggle-bar--middle {
      opacity: 0;
    }
    &.menu-toggle-bar--bottom {
      transform: translate(0, 0) rotate(-45deg);
    }
  }
}
  }

</style>

<script>
  // gør burgermenu til knap
document.getElementById('menu-toggle')
.addEventListener('click', function(){
  document.body.classList.toggle('nav-open');
});

  const nav = document.querySelector(".navLinks");
  const navLinks = nav.querySelectorAll("a");
  const currentURL = window.location.href;
  navLinks.forEach((link) => {
   // for hver element i navLinks, laver vi et if tjek på om det matcher den nuværende url, hvis den gør skal classen active tilføjes
   if(link.href === currentURL){
    link.classList.add("active");
   }
  });
 </script>