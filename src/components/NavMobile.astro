<nav class="mobileVersionNav">
  <a class="bookLink" target="blank" href="https://system.easypractice.net/book/kjlbye-psykoterapi?cookie_fixed=1#choose-where">Book tid</a>
  <input type="checkbox" id="check">
  <label for="check" class="navMobileBtn">
    <div class="container">
      <a id="menu-toggle" class="menu-toggle">
        <span class="menu-toggle-bar menu-toggle-bar--top"></span>
